<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftButton"
        style="@style/CalendarMonthArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calendar_padding"
        android:layout_marginRight="@dimen/calendar_padding"
        app:srcCompat="@drawable/ic_arrow_left"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/monthText"
        style="@style/CalendarMonthText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dateTitle"
        tools:text="September 2018" />

    <ImageView
        android:id="@+id/rightButton"
        style="@style/CalendarMonthArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calendar_padding"
        android:layout_marginRight="@dimen/calendar_padding"
        app:srcCompat="@drawable/ic_arrow_right"
        tools:ignore="ContentDescription" />

</LinearLayout>